---
const links = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Experiments', href: '/#experiments' },
];
---

<nav class="fixed top-6 left-1/2 -translate-x-1/2 z-50 w-[90%] max-w-[600px]">
  <div class="glass py-3 px-6 rounded-full flex items-center justify-between">
    <a href="/" class="font-display font-bold text-lg tracking-tight hover:text-accent-blue transition-colors">
      Ideas to Life
    </a>
    <div class="flex gap-6 items-center">
      {links.map(link => (
        <a 
          href={link.href} 
          class="text-sm font-medium text-white/70 hover:text-white transition-colors"
        >
          {link.name}
        </a>
      ))}
    </div>
  </div>
</nav>
