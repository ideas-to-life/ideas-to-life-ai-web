---
interface Props {
  headline: string;
  subheadline: string;
  details?: string;
}

const { headline, subheadline, details } = Astro.props;
---

<header class="min-h-[85vh] flex flex-col items-center justify-center text-center px-6 relative">
  <div class="max-w-4xl space-y-8">
    <h1 class="font-display text-5xl md:text-8xl font-extrabold tracking-tighter leading-none bg-gradient-to-r from-white via-white to-white/40 bg-clip-text text-transparent">
      {headline}
    </h1>
    
    <div class="space-y-4">
      <p class="text-xl md:text-3xl font-medium text-white/90 max-w-2xl mx-auto">
        {subheadline}
      </p>
      
      {details && (
        <p class="text-lg text-white/60 max-w-xl mx-auto">
          {details}
        </p>
      )}
    </div>

    <div class="flex flex-wrap items-center justify-center gap-4 pt-4">
      <a href="/experiments" class="px-8 py-4 bg-white text-black font-bold rounded-full hover:scale-105 hover:shadow-[0_0_30px_rgba(255,255,255,0.2)] transition-all">
        Explore the Lab
      </a>
      <a href="https://github.com/ideas-to-life" target="_blank" rel="noopener noreferrer" class="px-8 py-4 border border-white/10 hover:bg-white/5 font-bold rounded-full transition-all">
        Star on GitHub
      </a>
    </div>
  </div>
</header>
