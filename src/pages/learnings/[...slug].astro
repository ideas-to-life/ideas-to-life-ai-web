---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const learnings = await getCollection('learnings', ({ data }) => {
    return !data.draft;
  });
  return learnings.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'learnings'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const dateToDisplay = entry.data.type === 'weekly' 
  ? entry.data.date 
  : (entry.data.type === 'thread' ? (entry.data.lastUpdated || entry.data.firstObserved) : undefined);

const formattedDate = dateToDisplay ? dateToDisplay.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}) : null;

const typeLabel = entry.data.type === 'weekly' ? 'Weekly Learning' : 'Learning Thread';
---

<BaseLayout title={`${entry.data.title} | ${typeLabel}`} description={entry.data.summary ?? entry.data.title}>
  <article class="pt-32 pb-32 max-w-3xl mx-auto px-6">
    <header class="text-center mb-16 space-y-6">
        <div class="flex items-center justify-center gap-4 text-sm text-white/40 font-mono uppercase tracking-widest">
            {formattedDate && <time datetime={dateToDisplay?.toISOString()}>{formattedDate}</time>}
            {formattedDate && <span>•</span>}
            <span>{typeLabel}</span>
        </div>
      <h1 class="font-display text-4xl md:text-6xl font-bold leading-tight">
        {entry.data.title}
      </h1>
      {entry.data.summary && (
        <p class="text-xl text-white/60 max-w-2xl mx-auto leading-relaxed">
            {entry.data.summary}
        </p>
      )}
    </header>

    <div class="prose prose-invert prose-lg mx-auto prose-headings:font-display prose-headings:font-bold prose-p:text-white/80 prose-a:text-accent-blue hover:prose-a:text-accent-violet prose-a:no-underline hover:prose-a:underline prose-li:text-white/80">
      <Content />
    </div>

    <div class="mt-20 pt-10 border-t border-white/10 flex justify-between items-center">
        <a href="/learnings" class="text-white/50 hover:text-white flex items-center gap-2 transition-colors">
            <span>←</span> Back to Learnings
        </a>
    </div>
  </article>
</BaseLayout>
